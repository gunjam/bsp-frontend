        strong-start="<strong class='bold-small'>"
        strong-end="</strong>"/>
    </p>
    <p>
      <i18n-message key="start:noChildren"
        strong-start="<strong class='bold-small'>"
        strong-end="</strong>"/>
    </p>

    <p>
      <i18n-message key="start:toGet"/>
