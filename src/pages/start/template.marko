      <li>
        <i18n-message key="start:youNeedRequirement1"/>
      </li>
      <li>
        <i18n-message key="start:youNeedRequirement2"/>
      </li>
      <li>
        <i18n-message key="start:youNeedRequirement3"/>
      </li>
      <li>
        <i18n-message key="start:youNeedRequirement4"/>
      </li>
      <li>
        <i18n-message key="start:youNeedRequirement5"/>
      </li>
    </ul>

    <p>
      <a href="eligibility" class="button button-start" role="button">
        <i18n-message key="start:startNow"/>
      </a>
    </p>

  </layout-put>

</layout-use>
