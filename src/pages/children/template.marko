<i18n-var/>
<layout-use("../../common/layout.marko") errors=data.errors>

  <layout-put into="page-title">
    <i18n-message key="children:heading"/>
  </layout-put>

  <layout-put into="content">

    <a href="/contact-details" class="link-back" id="back">
      <i18n-message key="children:back"/>
    </a>

    <h1 class="heading-xlarge">
      <i18n-message key="children:heading"/>
    </h1>
    <p>
      <i18n-message key="children:description"/>
    </p>

    <form method="post" action="/dependent-children">

      <gov-radios legend=i18n('children:heading') name="dependantChildren"
        error=data.errors.dependantChildren value=data.values.dependantChildren hide-legend=true>
        <gov-radios:radio label=i18n('children:form.haveChildren.labelYes') value="yes"/>
        <gov-radios:radio label=i18n('children:form.haveChildren.labelNo') value="no"/>
      </gov-radios>

      <bsp-csrf-token/>

      <button type="submit" class="button">
        <i18n-message key="children:continue"/>
      </button>

    </form>

  </layout-put>

</layout-use>
