<i18n-var/>
<layout-use("../../common/layout.marko") errors=data.errors>

  <layout-put into="page-title">
    <i18n-message key="eligibility:heading"/>
  </layout-put>

  <layout-put into="content">

    <h1 class="heading-xlarge">
      <i18n-message key="eligibility:heading"/>
    </h1>

    <form method="post" action="/eligibility">

      <gov-radios legend=i18n('eligibility:form.married.legend') name="married"
        error=data.errors.married value=data.values.married>
        <gov-radios:radio label=i18n('eligibility:form.married.labelYes') value="yes"/>
        <gov-radios:radio label=i18n('eligibility:form.married.labelNo') value="no"/>
      </gov-radios>

      <gov-radios legend=i18n('eligibility:form.diedAfter.legend') name="date-of-death"
        error=data.errors['date-of-death'] value=data.values['date-of-death']>
        <gov-radios:radio label=i18n('eligibility:form.diedAfter.labelYes') value="yes"/>
        <gov-radios:radio label=i18n('eligibility:form.diedAfter.labelNo') value="no"/>
      </gov-radios>

      <gov-radios legend=i18n('eligibility:form.inUK.legend') name="in-uk"
        error=data.errors['in-uk'] value=data.values['in-uk']>
        <gov-radios:radio label=i18n('eligibility:form.inUK.labelYes') value="yes"/>
        <gov-radios:radio label=i18n('eligibility:form.inUK.labelNo') value="no"/>
      </gov-radios>

      <bsp-csrf-token/>

      <button type="submit" class="button">
        <i18n-message key="eligibility:continue"/>
      </button>

    </form>

  </layout-put>

</layout-use>
